name: nightly-check
run-name: daily unit testing for the API

on:
  schedule:
    -cron: '28 9 * *'

jobs:
  app-unit-test:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-node@v4
        with:
          node-version: '20'
      - run: npm i
      - run: npm run test